{% extends "IsmBlogBundle::layout.html.twig" %}

{% block body -%}

  <h2>Liste des articles</h2>
  <ul>
    {% for article in articles %}
      {% include "IsmBlogBundle:Article:article.html.twig" with {'accueil': true} %}
      <hr />
    {% else %}
      <p>Pas (encore !) d'articles</p>
    {% endfor %}
  </ul>

  {# S'il y a plus d'une page, on affiche la liste des pages #}
  {% if nb_page > 1 %}
    <div class="pagination">
        <ul>
          {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
          {% for p in range(1, nb_page) %}
            <li{% if p == page %} class="active"{% endif %}>
              <a href="{{ path('ismblog', {'page': p}) }}">{{ p }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
  {% endif %}

{% endblock %}
