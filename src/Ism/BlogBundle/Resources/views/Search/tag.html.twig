{% extends "IsmBlogBundle:Blog:index.html.twig" %}

{% block body -%}
<h2>Liste des articles - Tag &laquo; {{ name }} &raquo;</h2>
<ul>
  {% for article in articles %}
    {% include "IsmBlogBundle:Article:article.html.twig" with {'accueil': true} %}
    <hr />
  {% else %}
    <p>Aucun article correspondant pour ce tag</p>
  {% endfor %}
</ul>
{% endblock %}
