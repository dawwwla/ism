{# src/Ism/SiteBundle/Resources/views/Site/contact.html.twig #}

{% extends "IsmSiteBundle::layout.html.twig" %}

{% block title %}
  Contact - {{ parent() }}
{% endblock %}

{% block header %}
  <header class="jumbotron subhead">
    <div class="container">
      <h1>Nous contacter</h1>
      <p class="lead">Contacter ISM pour obtenir de l'aide.</p>
    </div>
  </header>
{% endblock %}

{% block ismsite_body %}
<div class="container">
  <div class="well">
    <form action="#" method="post" class="form-horizontal" {{ form_enctype(form) }}>
      {{ form_errors(form) }}

      <div class="control-group">
          {{ form_label(form.email) }}
        <div class="controls">
          {{ form_widget(form.email, { 'attr': {'class': 'span3', 'placeholder' : 'Email'} }) }}
          {{ form_errors(form.email) }}
        </div>
      </div>

      <div class="control-group">
          {{ form_label(form.subject) }}
        <div class="controls">
          {{ form_widget(form.subject, { 'attr': {'class': 'span4', 'placeholder' : 'Entrer un sujet'} }) }}
          {{ form_errors(form.subject) }}
        </div>
      </div>

      <div class="control-group">
          {{ form_label(form.content) }}
        <div class="controls">
          {{ form_widget(form.content, { 'attr': {'class': 'span6', 'rows':'12', 'placeholder' : 'Votre message ici'} }) }}
          {{ form_errors(form.content) }}
        </div>
      </div>

      {{ form_rest(form) }}

      <div class="controls">
        <input type="submit" class="btn btn-primary" value="Envoyer" />
      </div>
    </form>
  </div>
</div>
{% endblock %}
