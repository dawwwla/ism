{% extends "IsmSiteBundle::Links/links.html.twig" %}

{% block ismsite_body -%}
  <h2><a href="{{ entity.website }}">{{ entity.website }}</a></h2>
  <i>Ajouté par {{ entity.user }} le {{ entity.date|date('d/m/Y') }}</i>
  </br></br>
  <table class="table">
    <tbody>
      <tr>
        <th>Auteur</th>
        <td>{{ entity.fullname }}</td>
      </tr>
      <tr>
        <th>Website</th>
        <td><a href="{{ entity.website }}">{{ entity.website }}</a></td>
      </tr>
      <tr>
        <th>Description</th>
        <td>{{ entity.description }}</td>
      </tr>
    </tbody>
  </table>
  </br>
  <p>
    <a href="{{ path('ismsite_links') }}" class="btn">
      <i class="icon-chevron-left"></i>
      Retour à la liste
    </a>
    {% if (is_granted('ROLE_AUTEUR') and (entity.user.id == app.user.id)) or is_granted('ROLE_ADMIN') %}
    <a href="{{ path('links_edit', { 'id': entity.id }) }}" class="btn">
      <i class="icon-edit"></i>
      Modifier
    </a>
    <a href="{{ path('links_delete', { 'id': entity.id }) }}" class="btn">
      <i class="icon-trash"></i>
      Supprimer
    </a>
  {% endif %}
  </p>


{% endblock %}
