{# src/Sdz/SiteBundle/Resources/views/Default/roadmap.html.twig #}

{% extends "SdzSiteBundle::layout.html.twig" %}

{% block title %}
  Roadmap - {{ parent() }}
{% endblock %}

{% block header %}
  <header class="jumbotron subhead">
    <div class="container">
      <h1>Roadmap</h1>
      <p class="lead">Consulter les roadmaps d'ISM.</p>
    </div>
  </header>
{% endblock %}

{% block content %}
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Product</th>
        <th>Payment Taken</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <tr class="success">
        <td>1</td>
        <td>TB - Monthly</td>
        <td>01/04/2012</td>
        <td>Approved</td>
      </tr>
      <tr class="error">
        <td>2</td>
        <td>TB - Monthly</td>
        <td>02/04/2012</td>
        <td>Declined</td>
      </tr>
      <tr class="warning">
        <td>3</td>
        <td>TB - Monthly</td>
        <td>03/04/2012</td>
        <td>Pending</td>
      </tr>
      <tr class="info">
        <td>4</td>
        <td>TB - Monthly</td>
        <td>04/04/2012</td>
        <td>Call in to confirm</td>
      </tr>
    </tbody>
  </table>
{% endblock %}
